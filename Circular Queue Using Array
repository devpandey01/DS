#include<stdio.h>
#include<stdlib.h>
#define SIZE 4

int q[SIZE];
int x=-1;
int i,val,choice;
int front=-1;
int rear=-1;

void enqueue(int val){
    if(rear==-1){
        front++;
        rear++;
        q[rear]=val;
    }
    else if(front==(rear+1)%SIZE){
        printf("Queue full\n");
    }
    else{
        rear=(rear+1)%SIZE;
        q[rear]=val;
    }
}

int dequeue(){
    if(front==-1){
        printf("Queue is empty\n");
    }
    else if(front==rear){
        x=q[front];
        front=-1;
        rear=-1;
    }
    else{
        x=q[front];
        front=(front+1)%SIZE;
        printf("%d is popped\n",x);
    }
}

void display(){
    if(front<rear){
        for(i=front;i<=rear;i++){
            printf("%d ",q[i]);
        }
    }
    else{
        i=front;
        while(i!=rear){
            printf("%d ",q[i]);
            i=(i+1)%SIZE;
            printf("%d",q[rear]);
        }
    }
    printf("\n");
}

void main(){
    while(1){
    printf("-----MENU-----\n");
    printf("1. Enqueue\n");
    printf("2. Dequeue\n");
    printf("3. Display\n");
    printf("4. Exit\n");
    printf("Enter choice: ");
    scanf("%d",&choice);
    switch(choice){
        case 1:
        printf("Enter element to insert: ");
        scanf("%d",&val);
        enqueue(val);
        break;

        case 2:
        dequeue();
        break;

        case 3:
        display();
        break;

        case 4:
        exit(0);
        break;
    }
    }
}
